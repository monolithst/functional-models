{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2021", "dom", "es2017"],
    "module": "commonjs",
    "rootDir": "./src",
    "declaration": true,
     "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "stepDefinitions",
    "coverage",
    "test"
  ]
}
