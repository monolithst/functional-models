{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2021", "dom", "es2017"],
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    ".nyc_output",
    "coverage",
    ".git",
    ".github",
    "features",
    "dist"
  ]
}
